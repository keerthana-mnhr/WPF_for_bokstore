<Page x:Class="WPF_for_bokstore.StockBalance"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_for_bokstore"
      xmlns:UI="clr-namespace:WPF_for_bokstore.ViewModels"

      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance Type=UI:StockBalanceViewModel,IsDesignTimeCreatable=True}"
      d:DesignHeight="250" d:DesignWidth="350"
      Title="StockBalance">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
         

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>

        </Grid.ColumnDefinitions>


        <Button
                Grid.Column="1"
                Grid.Row="0"
                Content="x"
                
                Height="20"
                Width="20"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Center"
                BorderThickness="0"
                Background="Red"
                Click="Button_Click"
                
               />


        <TextBlock 
            Grid.Row="0"
            Grid.Column="0"
            Text="Stock"
            
            HorizontalAlignment="Left"/>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Background="White" Margin="10"  >
            <TextBlock Text="Select Store"
                       HorizontalAlignment="Left" 
                       FontSize="10"
                       Height="30" 
                       Margin="0,10,0,5"/>
            <ComboBox
                Grid.Row="2"
                    Width="200"
                    Margin="0,0,0,10" 
                    BorderBrush="Black" 
                    BorderThickness="1"
                    ItemsSource="{Binding Stores}"
                    DisplayMemberPath="StoreName"
                    SelectedItem="{Binding SelectedStore}"/>

            <Button x:Name="AddBook"
                    Content="AddBook"
                    Width="60"
                    Margin="10"
                    Click="AddBook_Click"
                    />


            <DataGrid ItemsSource="{Binding StockBalanceInStore}" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ISBN13" Binding="{Binding BookIsbn13}"/>
                    <DataGridTextColumn Header="StockBalance" Binding="{Binding Count}"/>

                </DataGrid.Columns>
                
            </DataGrid>



        </StackPanel>

    </Grid>   
</Page>
