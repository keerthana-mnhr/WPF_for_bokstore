<Window x:Class="WPF_for_bokstore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_for_bokstore"
        mc:Ignorable="d"
        Title="Book Store" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
     
        <Menu Grid.Row="0" DockPanel.Dock="Top" Background="LightBlue">
            <MenuItem Header="_File" Click="MenuItem_Click">
                <MenuItem Header="Add">
                    <MenuItem Header="Book">
                        
                    </MenuItem>
                    <MenuItem Header="Title">

                    </MenuItem>
                    <MenuItem Header="Author">

                    </MenuItem>
                </MenuItem>
                <MenuItem Header="Update">
                    
                </MenuItem>
                <MenuItem Header="Delete">
                    
                </MenuItem>
            </MenuItem>

            <MenuItem Header="_View" >
                <MenuItem Header="StockBalance">
                    
                </MenuItem>
            </MenuItem>
            
        </Menu>
        <StackPanel Grid.Row="1">
            <StackPanel.Background>
                <ImageBrush ImageSource="/Assets/Images/bookstore.jpg"
                            Stretch="UniformToFill"/>
            </StackPanel.Background>

            <Border Background="Black">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="ITHS BOOKSTORE" FontSize="48" FontWeight="Bold" Foreground="White"/>
                </StackPanel>
            </Border>
        </StackPanel>

    </Grid>
</Window>
